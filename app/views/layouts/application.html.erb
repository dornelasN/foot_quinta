<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render '/layouts/rails_default' %>
  </head>

  <body>
    <div class="container">
      <%= render '/layouts/header' %>
      <%= yield :form_errors %>
      <% flash.each do |key,value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= render '/layouts/footer' %>
    </div>
  </body>
</html>
