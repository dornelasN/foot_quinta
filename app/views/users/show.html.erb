<% content_for :title, @user.name %>

<div class='row'>
  <section class='user_info'>
    <h1>
      <%= image_tag @user.picture.url %>
      <%= @user.name %>
    </h1>
  </section>
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class='posts'>
      <%= render @posts %>
    </ol>
  <% end %>
</div>