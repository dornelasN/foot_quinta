<% content_for :title, @user.name %>

<div class='row'>
  <section class='user_info'>
    <h1>
      <%= image_tag @user.picture.profile.url %>
      <%= @user.name %>
    </h1>
  </section>

  <div class='row'>
    <div class='col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3'>
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class='posts'>
          <%= render @posts %>
        </ol>
      <% end %>
    </div>
  </div>
</div>